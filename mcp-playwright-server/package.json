{
  "name": "mcp-playwright-server",
  "version": "1.0.0",
  "description": "MCP server for running Playwright tests with comprehensive artifact capture",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "playwright test",
    "test:debug": "playwright test --debug"
  },
  "keywords": [
    "mcp",
    "playwright",
    "testing",
    "e2e",
    "automation"
  ],
  "author": "Beyond Pandora",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@playwright/test": "^1.48.2",
    "playwright": "^1.48.2",
    "uuid": "^11.0.3",
    "axe-playwright": "^2.0.3",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
